# This is Git's per-user configuration file.
[user]
	name = faith
	email = jamienibtong@gmail.com
# Please adapt and uncomment the following lines:
#	name = Jamie Nib Tong
#	email = faith@Jamies-MacBook.local
[credential]
	helper = store
[hub]
	protocol = https
[pull]
	rebase = false
[merge]
  tool = nvimdiff
[mergetool]
  prompt = false
  keepBackup = false
[mergetool "nvimdiff"]
  layout = "LOCAL,BASE,REMOTE / MERGED"
[diff]
  tool = nvimdiff
[difftool]
  prompt = false 
[difftool "nvimdiff"]
  cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""

